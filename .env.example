# Environment Configuration
NODE_ENV=your-environment-mode

# Server Configuration
PORT=your-server-port

# Database Configuration
# MongoDB connection string with username, password, cluster, and database name
MONGO_DB=your-mongodb-connection-string

# JWT Configuration
# Strong secret keys for JWT token signing (minimum 32 characters)
JWT_ACCESS_KEY=your-jwt-access-secret-key
JWT_REFRESH_KEY=your-jwt-refresh-secret-key

# Telegram Bot Configuration
BOT_TOKEN=your-telegram-bot-token
BOT_USERNAME=your-bot-username
ENABLE_BOT=your-enable-bot-value

# Admin Configuration (First time setup)
# This admin will be created automatically on first server start
ADMIN_FIRSTNAME=your-admin-firstname
ADMIN_LASTNAME=your-admin-lastname
ADMIN_PHONENUMBER=your-admin-phonenumber
ADMIN_PASSWORD=your-admin-password

# URLs Configuration
# Frontend dashboard URL
DASHBOARD_HOST_URL=your-dashboard-url

# Backend server URL (for bot webhook)
BOT_HOST_URL=your-backend-url

# Telegram Mini App URL (deployed on Vercel)
BOT_WEB_APP_URL=your-mini-app-url

# Session Configuration
# Strong secret for session encryption
SESSION_SECRET=your-session-secret

# File Upload Configuration
# Maximum file size in bytes (5MB = 5242880)
MAX_FILE_SIZE=your-max-file-size
UPLOAD_PATH=your-upload-path

# Logging Configuration
# Options: error, warn, info, debug
LOG_LEVEL=your-log-level
ENABLE_LOGS=your-enable-logs-value
ENABLE_TRANSACTIONS=your-enable-transactions-value

# Rate Limiting Configuration
# Time window in milliseconds (15 minutes = 900000)
RATE_LIMIT_WINDOW_MS=your-rate-limit-window
# Maximum requests per window
RATE_LIMIT_MAX_REQUESTS=your-max-requests

# Telegram Backup Configuration (Optional)
# Channel ID for automated backups
TELEGRAM_BACKUP_CHANNEL_ID=your-backup-channel-id
# Bot token for backup notifications
TELEGRAM_BOT_TOKEN=your-backup-bot-token
# Chat ID for backup notifications
TELEGRAM_CHAT_ID=your-backup-chat-id

